if posts
  section.grid-section.posts
    .posts-list
      each post in posts
        a(href=`/r/${post.slug}`).post-item
          span.post-item__cover
            if post.covers.length 
              img(src=post.covers[0])
          span.post-item__detail
            h2.post-item__title= post.title
            span.post-item__date= post.dateString
              
    a.posts-link(href='/r') All posts
